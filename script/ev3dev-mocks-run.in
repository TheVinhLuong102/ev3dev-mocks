#!/bin/sh

: ${EV3DEV_MOCKS_TARGET:="ev3"}
: ${EV3DEV_MOCKS_FBDEV:="/dev/fb0"}

ALSA_CONFIG_PATH=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_PKGDATADIR@/ev3dev.alsa.conf \
umockdev-run -d @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_PKGLIBDIR@/${EV3DEV_MOCKS_TARGET}.umockdev \
             -i ${EV3DEV_MOCKS_FBDEV}=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_PKGLIBDIR@/${EV3DEV_MOCKS_TARGET}-fbdev.ioctl \
-- "$@"
